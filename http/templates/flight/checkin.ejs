<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr">

<head>
    <meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <meta name="google" value="notranslate">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/util.css">
    <link rel="stylesheet" href="/css/checkin.css">
    <link rel="stylesheet" href="/css/light-bootstrap-dashboard.css">
    <script src="/js/jquery-1.10.2.js"></script>
    <title>Ebiz Airlines</title>
</head>
<body data-gr-c-s-loaded="true">
<div class="header">
    <span>Ebiz Airlines</span>
</div>
<div class="container-fluid" id="checkinContent">
    <div class="row marginTop20">
        <div class="col-md-12">
            <section class="dvHeader">
                <h2>CHECK IN ONLINE</h2>
                <%= baseURL %>
            </section>
            <section class="checkin-info">
                <p>Here is your check-in information</p>
                <table class="table table-responsive table table-striped">
                    <tbody>
                        <tr>
                            <td>Passenger</td><td><%= booking.get('first_name') +" "+booking.get('last_name')%></td>
                        </tr>
                        <tr>
                            <td>Booking Number</td><td><%= booking.get('booking_number') %></td>
                        </tr>
                        <tr>
                            <td>Flight</td><td><%= booking.get('flight_code') %></td>
                        </tr>
                        <!--<tr>-->
                            <!--<td>Depart City</td><td><%= booking.get('depart_name') %> (<%= booking.get('depart_code') %>)</td>-->
                        <!--</tr>-->
                        <tr>
                            <td>Departure Airport</td><td><%= booking.get('depart_airport') %></td>
                        </tr>
                        <tr>
                            <td>Arrival Airport</td><td><%= booking.get('destination_airport') %></td>
                        </tr>
                        <tr>
                            <td>Departure Time</td><td><%= datetime.create(booking.get('departure_time')).format('Y-m-d H:M') %></td>
                        </tr>
                        <tr>
                            <td>Ticket Price</td><td>$<%= booking.get('ticket_price').toFixed(2).replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,") %></td>
                        </tr>
                    </tbody>
                </table>
                <div class="checkin-confirm text-center">
                    <div class="checkin_success" id="great" style="display: none">
                        <span>You have checked in success, we have sent your boarding to your messenger!</span>
                    </div>
                    <form class="form-horizontal" method="post">
                        <input type="hidden" name="passenger_id" value="<%= booking.get('passenger_id') %>">
                        <input type="hidden" name="flight_id" value="<%= booking.get('flight_id') %>">
                        <input type="hidden" name="booking_id" value="<%= booking.get('booking_id') %>">
                        <input type="hidden" name="url" value="<%= baseURL %>">
                        <button type="button" id="checkin" class="btn btn-danger btn-fill">Check In</button>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
<script>
    $("#checkin").on('click',function () {
        var url = $("[name=url]").val();
        var passenger_id = $("[name=passenger_id]").val();
        var flight_id    = $("[name=flight_id]").val();
        var booking_id   = $("[name=booking_id]").val();
        $.ajax({
            type: "POST",
            url: url+"/checkin",
            data : {
                passenger_id: passenger_id,
                flight_id: flight_id,
                booking_id: booking_id
            },success: function (data) {
                if(data) {
                    $("#great").show();
                    $("#checkin").hide();
                }
            }
        })
    })
</script>
</body>