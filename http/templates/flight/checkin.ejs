<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr">

<head>
    <meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />

    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <meta name="google" value="notranslate">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/css/util.css">
    <link rel="stylesheet" href="/css/checkin.css">
    <link rel="stylesheet" href="/css/light-bootstrap-dashboard.css">
    <title>Ebiz Airlines</title>
</head>
<body data-gr-c-s-loaded="true">
<div class="header">
    <span>Ebiz Airlines</span>
</div>
<div class="container-fluid" id="checkinContent">
    <div class="row marginTop20">
        <div class="col-md-12">
            <section class="dvHeader">
                <h2>CHECK IN ONLINE</h2>
            </section>
            <section class="checkin-info">
                <p>Here is your check-in information</p>
                <table class="table table-responsive table table-striped">
                    <tbody>
                        <tr>
                            <td>Passenger</td><td><%= booking.get('first_name') +" "+booking.get('last_name')%></td>
                        </tr>
                        <tr>
                            <td>Booking Number</td><td><%= booking.get('booking_number') %></td>
                        </tr>
                        <tr>
                            <td>Flight</td><td><%= booking.get('flight_code') %></td>
                        </tr>
                        <!--<tr>-->
                            <!--<td>Depart City</td><td><%= booking.get('depart_name') %> (<%= booking.get('depart_code') %>)</td>-->
                        <!--</tr>-->
                        <tr>
                            <td>Departure Airport</td><td><%= booking.get('depart_airport') %></td>
                        </tr>
                        <tr>
                            <td>Arrival Airport</td><td><%= booking.get('destination_airport') %></td>
                        </tr>
                        <tr>
                            <td>Departure Time</td><td><%= datetime.create(booking.get('departure_time')).format('Y-m-d H:M') %></td>
                        </tr>
                        <tr>
                            <td>Ticket Price</td><td>$<%= booking.get('ticket_price').toFixed(2).replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,") %></td>
                        </tr>
                    </tbody>
                </table>
                <div class="checkin-confirm text-center">
                    <form class="form-horizontal" method="post">
                        <input type="hidden" value="<%= booking.get('passenger_id') %>">
                        <input type="hidden" value="<%= booking.get('booking_id') %>">
                        <button class="btn btn-success btn-fill">Check In</button>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
</body>